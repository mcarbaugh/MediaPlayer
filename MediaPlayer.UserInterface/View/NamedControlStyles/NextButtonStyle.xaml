<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MediaPlayer.UserInterface.View.NamedControlStyles">

    <Style TargetType="Button" BasedOn="{StaticResource ResourceKey=ControlButtonStyle}" x:Key="NextButtonStyle">
        <Setter Property="Content" Value="{DynamicResource ResourceKey=NextButtonDefault}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Content" Value="{DynamicResource ResourceKey=NextButtonMouseOver}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Content" Value="{DynamicResource ResourceKey=NextButtonDefault}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
</ResourceDictionary>